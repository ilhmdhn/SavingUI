<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/icon_income_and_expenditure"
        app:layout_constraintBottom_toBottomOf="@+id/ic_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_status"
        app:srcCompat="@drawable/ic_income" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/TextContent.name.transactionhistory"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ic_transaction"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Succes !" />

    <TextView
        android:id="@+id/ic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        tools:text="February 19, 03:25 PM" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/TextContent.name.transactionhistory"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        tools:text="+ 100.000"
        app:layout_constraintBottom_toBottomOf="@+id/ic_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_status" />
</androidx.constraintlayout.widget.ConstraintLayout>